@using Arenda.Models.ViewModel
@model RentedPremiseViewModel

@* Форма для ввода помещения, цели аренды и стоимости аренды. *@
<div class="form-group row">

        <div class="col-4">
            <label>Арендованное помещение</label>
        </div>
        <div class="col-2">
            <select asp-for="RentedPremise.PremiseId" name="Premises[@Model.Index].PremiseId" asp-items="@Model.Premises" class="form-control">
                <option disabled selected>--Выберите помещение--</option>
            </select>
            <span asp-validation-for="@Model.RentedPremise.PremiseId" class="text-danger"></span> 
        </div>
        <div class="col-2">
            <select asp-for="RentedPremise.RentPurposeId" name="Premises[@Model.Index].RentPurposeId" asp-items="@Model.RentPurposes" class="form-control">
                <option disabled selected>--Выберите цель аренды--</option>
            </select>
             <span asp-validation-for="@Model.RentedPremise.RentPurposeId" class="text-danger"></span> 
        </div>
        <div class="col-2">
            <input asp-for="RentedPremise.RentCost" name="Premises[@Model.Index].RentCost" placeholder="Размер платы" class="form-control" />
            <span asp-validation-for="@Model.RentedPremise.RentCost" class="text-danger"></span>
        </div>
        <div class="col-2">
            <input asp-for="RentedPremise.RentalPeriod"  name="Premises[@Model.Index].RentalPeriod" placeholder="Срок аренды" class="form-control" />
            <span asp-validation-for="@Model.RentedPremise.RentalPeriod" class="text-danger"></span>
        </div>
        <button type="button" class="removeApartment">Удалить квартиру</button>
    </div>

@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
}